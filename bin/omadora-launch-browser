#!/bin/bash
# Launch default browser or in private mode

if [[ "$1" == "--private" ]]; then
  # Try to launch browser in private/incognito mode
  if command -v brave &>/dev/null; then
    brave --incognito &
  elif command -v chromium &>/dev/null; then
    chromium --incognito &
  elif command -v firefox &>/dev/null; then
    firefox --private-window &
  else
    xdg-open https://
  fi
else
  # Launch default browser
  xdg-open https://
fi
